  <!-- Master layout. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:gravity="center_vertical"
    android:layout_gravity="left"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="0dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/ItemimageView"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="right">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_itemname_textview"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="Parcel name"
            />
            <TextView
            android:id="@+id/detail_itemcategory_textview"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detail_itemname_textview"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Cctegory"
            />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_below="@+id/detail_itemcategory_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/detail_itemspicemeter_textview"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ratingBar"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Spice Meter"
                />
            <TextView
                android:id="@+id/detail_itemprice_textview"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_itemspicemeter_textview"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Price: "
                />
            <TextView
                android:id="@+id/detail_itemisveg_textview"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_itemprice_textview"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Is veg: "
                />
            <!--<ImageView-->
                <!--android:layout_width="36dp"-->
                <!--android:layout_height="36dp"-->
                <!--android:id="@+id/veg_icon"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:layout_below="@+id/detail_itemprice_textview"-->
                <!--android:src="@drawable/veg_icon"-->
                <!-- -->
                <!--/>-->
            <TextView
                android:id="@+id/detail_itemlike_textview"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_itemisveg_textview"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Like"
                />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />
            <TextView
                android:id="@+id/detail_itemdescription_textview"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_itemlike_textview"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:background="@color/common_action_bar_splitter"
                android:elevation="4dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Description"
                />


            </RelativeLayout>




    </LinearLayout>

</LinearLayout>
</ScrollView>